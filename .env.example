# ── Database ──
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/wc26

# ── Auth ──
JWT_SECRET=change_me_to_a_long_random_string
JWT_ALGORITHM=HS256

# ── API-Football (free, 100 req/day — seeding + post-match stats) ──
API_FOOTBALL_KEY=your_api_football_key
WORLD_CUP_LEAGUE_ID=1
WORLD_CUP_SEASON=2022

# ── football-data.org (free, 10 req/min — live score polling) ──
FOOTBALL_DATA_TOKEN=your_football_data_token

# ── Firebase (backend token verification) ──
FIREBASE_SERVICE_ACCOUNT_JSON=./firebase-service-account.json

# ── Ollama (local LLM — ToT planner) ──
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=wc26-planner

# ── OpenAI-compatible key (set to "ollama" for local) ──
OPENAI_API_KEY=ollama

# ── RL Executor ──
RL_MODEL_PATH=./models/rl_executor.npz

# ── ChromaDB (episodic memory) ──
CHROMADB_PATH=./data/chromadb
